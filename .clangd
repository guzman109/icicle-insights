CompileFlags:
  Add:
    - "-std=c++23"
    - "-Wall"
    - "-Wextra"
    - "-Wpedantic"
  CompilationDatabase: build

# Diagnostics are configured in .clang-tidy
Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: Strict

# Editor features
InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true
  BlockEnd: true

Hover:
  ShowAKA: true

# Index settings for better code navigation
Index:
  Background: Build
